

//  MY Variables  

generalPadding = 30px
generalBorderRadius = 0pt
empty = 0px


 // start of code
 header 
     font-size: 40px
     font-weight:bold
      
    

    body 
      font: 32px Helvetica
      background: #999999
    
  // my example of nesting 
    #main 
      min-height: 800px
      margin: empty
      padding: empty
      display: flex
      flex-flow: row
      article 
        padding: generalPadding
        font-family: 'Times New Roman', Times, serif
        border: 3px solid black
        border-radius: generalBorderRadius
        background: #dddd88
        flex: 3 1 60%
        order: 2
      nav 
        padding: generalPadding
        font-family: Garamond
        border: 3px solid black
        border-radius: generalBorderRadius
        background: #ccccff
        flex: 1 6 20%
        order: 1
        text-align:right
      aside 
        padding: generalPadding
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
        border: 3px solid black
        border-radius: generalBorderRadius
        background: #ccccff
        flex: 1 6 20%
        order: 3
    

    header,
    footer 
      display: block
      padding: generalPadding
      min-height: 100px
      border: 3px solid black
      border-radius: generalBorderRadius
      background: #ffeebb
    

    /* Too narrow to support three columns */
    @media all and (max-width: 1000px) 

      #main,
      #page 
        display: flex
        flex-direction: column
      

      #main>nav 
        /* Return them to document order */
        padding-bottom:75px
        text-align:left
        order: 0
      

      #main>article
        order: 1
      
      #main>aside 
        order: 2
      


      #main>nav,
      #main>aside,
      header,
      footer 
        min-height: 50px
        max-height: 50px
      

      footer 
        font-family: Arial, Helvetica, sans-serif